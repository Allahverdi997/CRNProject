@using CRNProject_CoreMVC_UI.Models;
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model AboutAddViewModel;

<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Hakkında Güncelle</h4>
            <p class="mb-30">Güncellenecek Bilgileri Giriniz.</p>
        </div>
    </div>
    <form href="/Admin/About/UpdateAbout" method="post" role="form" enctype="multipart/form-data">
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Dil</label>
            <div class="col-sm-12 col-md-10">
                <select class="custom-select col-12" name="LangId">
                    <option selected="">Seçiniz...</option>
                    @foreach (var lang in Model.LangTables)
                    {
                        if (lang.Id == ViewBag.Language)
                        {
                            <option selected value="@lang.Id">@lang.LangName</option>
                        }
                        else
                        {
                            <option value="@lang.Id">@lang.LangName</option>
                        }

                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Title</label>
            <div class="col-sm-12 col-md-10">
                <input class="form-control" type="text" value="@Model.About.Title" name="Title">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Content</label>
            <div class="col-sm-12 col-md-10">
                <input class="form-control" type="text" value="@Model.About.Content" name="Content">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Resim/Video URL</label>
            <div class="col-sm-12 col-md-10">
                <input class="form-control" type="file" value="@Model.About.ImageVideoURL" name="formFile">
            </div>
            <input type="hidden" value="@Model.About.ImageVideoURL" name="ImageVideoURL" />
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Resim/Video Alt</label>
            <div class="col-sm-12 col-md-10">
                <input class="form-control" type="text" value="@Model.About.ImageVideoAlt" name="ImageVideoAlt">
            </div>
        </div>
        <input type="hidden" value="@Model.About.Id" name="Id"/>
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Aktif Durumu</label>
            <div class="col-sm-12 col-md-10">
                <select class="custom-select col-12" name="IsActive">
                    <option selected="">Seçiniz...</option>
                    @if (Model.About.IsActive == true)
                    {
                        <option selected value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    }
                    else
                    {
                        <option value="true">Aktif</option>
                        <option selected value="false">Pasif</option>
                    }
                </select>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-lg">Güncelle</button>
        </div>
    </form>
</div>

